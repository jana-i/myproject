@model List<ECinema.Web.Models.Domain.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new Ticket</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">


            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 35rem;">
                    <img class="card-img-top" src="@item.TicketImage" style="height: 60%" alt="Image for product!" />

                    <div class="card-body">
                        <h3 class="card-title">@item.TicketName</h3>
                        <p class="card-text"><strong>Date:</strong> @item.TicketDate</p>

                        <h6><strong>Price:</strong> @item.TicketPrice $</h6>
                    </div>

                    <div class="card-footer">

                        <a asp-controller="Tickets" asp-action="AddTicketToCard" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>

                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
                @:</div>
            }
    }
</div>
